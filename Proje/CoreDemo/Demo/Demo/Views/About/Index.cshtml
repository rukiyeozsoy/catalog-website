@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<link rel="stylesheet" href="css/jquery.desoslide.css">
<html lang="zxx">
<body>
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle"> Hakkımızda</h3>
			<div class="row inner-sec">
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<div class="blog-grid-top">
						<div class="blog_info_left_grid">
							<a>
								<img src="~/CoreBlogTema/images/mutfak/real2.jpg" class="img-fluid" alt="">
							</a>
						</div>
						<h3>
							Misyonumuz
						</h3>
						@foreach (var item in Model)
					   {
						<p>@item.About_Details</p>
					   }
					</div>
				</div>
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
							<img src="~/CoreBlogTema/images/mutfak/real4.jpg" class="img-fluid" alt="">
						</div>
						
						@await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")
					</div>

				</aside>
			</div>
		</div>
	</section>
</body>

</html>