@using EntityLayer.Concrete
@model List<Granit>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Granit Modeller</h3>
			<div class="inner-sec">
				<div class="left-blog-info-w3layouts-agileits text-left">
					<div class="row">
						@foreach(var item in Model ){
						<div class="col-lg-4 card">
							<a>
								<img src="@item.Granit_Image" class="card-img-top img-fluid" alt="">
							</a>

							<div class="card-body">
								<h5 class="card-title">
									<a>@item.Granit_Name</a>
								</h5>
							</div>
						</div>
						<br />
						}
					</div>
				</div>
			</div>
		</div>
	</section>

