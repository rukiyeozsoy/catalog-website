
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!DOCTYPE html>
	<link href="~/CoreBlogTema/css/contact.css" rel='stylesheet' type='text/css' />
<body>
	<section class="main-content-w3layouts-agileits">

		<h3 class="tittle">Bize Ulaşın</h3>
		<p class="text-center">Düşünceleriniz bizim için çok kıymetli</p>
		<div class="contact-map inner-sec">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3013.735510589787!2d29.28208351452388!3d40.94346353136128!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cada794b299a75%3A0xefee1de26b881fa!2sNecip%20Faz%C4%B1l%2C%20Antalya%20Cd.%20No%3A132%2C%2034925%20Sultanbeyli%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1660856602427!5m2!1str!2str" 
				class="map" style="border:0" allowfullscreen=""></iframe>
		</div>
		<div class="ad-inf-sec bg-light">
			<div class="container">
				<div class="address row">

					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="far fa-map"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Adres</h6>
								<p> İstanbul, Türkiye

								</p>
							</div>
						</div>

					</div>
					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="far fa-envelope"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Mail</h6>
								<p>Email :
									<a href="mailto:ozsoy.rukiye@gmail.com"> info@gmail.com</a>
								</p>
							</div>

						</div>
					</div>
					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="fas fa-mobile-alt"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Telefon</h6>
								<p>+90 537 873 19 77</p>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="contact_grid_right">
				<form method="post">
					<div class="row contact_left_grid">
						<div class="col-md-6 con-left">
							<div class="form-group">
								<label for="validationCustom01 my-2">ADINIZ</label>
								<input class="form-control" type="text" name="Contact_UserName" placeholder="" required="">
							</div>
							<div class="form-group">
								<label for="exampleFormControlInput1">MAİL ADRESİNİZ</label>
								<input class="form-control" type="email" name="Contact_Mail" placeholder="" required="">
							</div>
							<div class="form-group">
								<label for="validationCustom03 my-2">KONU</label>
								<input class="form-control" type="text" name="Contact_Subject" placeholder="" required="">
							</div>
						</div>
						<div class="col-md-6 con-right">
							<div class="form-group">
								<label for="textarea">MESAJINIZ</label>
								<textarea id="textarea" name="Contact_Message" placeholder=""></textarea>
							</div>
							<input class="form-control" type="submit" value="Gönder">

						</div>
					</div>
				</form>
			</div>
		</div>
	</section>
</body>

